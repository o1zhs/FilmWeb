<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Servlet.user.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FilmQueryServlet</servlet-name>
        <servlet-class>Servlet.film.FilmQueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilmQueryServlet</servlet-name>
        <url-pattern>/FilmQuery</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FilmDeleteServlet</servlet-name>
        <servlet-class>Servlet.film.FilmDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilmDeleteServlet</servlet-name>
        <url-pattern>/FilmDelete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FilmUpdateServlet</servlet-name>
        <servlet-class>Servlet.film.FilmUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilmUpdateServlet</servlet-name>
        <url-pattern>/FilmUpdate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FilmInsertServlet</servlet-name>
        <servlet-class>Servlet.film.FilmInsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilmInsertServlet</servlet-name>
        <url-pattern>/FilmInsert</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FirmQueryServlet</servlet-name>
        <servlet-class>Servlet.firm.FirmQueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirmQueryServlet</servlet-name>
        <url-pattern>/FirmQuery</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FirmInsertServlet</servlet-name>
        <servlet-class>Servlet.firm.FirmInsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirmInsertServlet</servlet-name>
        <url-pattern>/FirmInsert</url-pattern>
    </servlet-mapping>


    

</web-app>